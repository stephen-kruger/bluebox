	<distributionManagement>
		<repository>
			<id>nexus-site</id>
			<url>http://central_nexus/server</url>
		</repository>
	</distributionManagement>
	<repositories>
		<!-- <repository> <id>maven-restlet</id> <name>Public online Restlet repository</name>
			<url>http://maven.restlet.com</url> </repository> <repository> <id>maven-java-net</id>
			<name>Maven Java Net</name> <url>https://maven.java.net/content/repositories/releases/</url>
